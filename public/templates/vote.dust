{>"layouts/master" /}

{<title}
  FastStraw
{/title}

{<body}
	<div id="main">
		<div class="question">
			<span class="pre-q">Q:</span>
			<span class="q">{question}</span>
		</div>
		<div class="answer">
			<span class="pre-a">A:</span>
			<form method="POST">
				<input type="hidden" name="_csrf" value="{_csrf}">
				<input type="submit" name="yes" class="btn btn-success" value="Yes">
				<input type="submit" name="no" class="btn btn-danger" value="No">
			</form>
		</div>
	</div>
{/body}